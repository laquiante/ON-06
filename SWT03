auto lo
iface lo inet loopback

auto swp2
iface swp2
    address 172.31.2.1/24

auto swp13
iface swp13
    bridge-access 30

auto bridge
iface bridge
    bridge-ports swp13
    bridge-vids 30
    bridge-vlan-aware yes
    
auto mgmt
iface mgmt
    vrf-table auto
    address 127.0.0.1/8

auto eth0
iface eth0 inet dhcp
    vrf mgmt
    post-up sysctl -w net.ipv6.conf.eth0.accept_ra=2
    
auto vlan30
iface vlan30
    address 134.60.30.1/24
    vlan-id 30                                                   vlan-raw-device bridge
